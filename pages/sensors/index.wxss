#page_top{
  width: 100%;
  height: 20vh;
  background: #44b5d8;
  background: -moz-linear-gradient(-45deg, #44b5d8 0%, #44b5d8 100%, #44b5d8 100%); 
  background: -webkit-linear-gradient(-45deg, #44b5d8 0%,#44b5d8 100%,#44b5d8 100%); 
  background: linear-gradient(135deg, #44b5d8 0%,#44b5d8 100%,#44b5d8 100%); 
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#b4e391', endColorstr='#b4e391',GradientType=1 ); 
  position: fixed;
  top: 0;
  left: 0;
}
#page_top image{
  position: absolute;
  top: 0;
  right: 0;
  width: 20vh;
  height: 20vh;
  background-size: 100% 100%;
  opacity: .3;
}
#port_box{
  width: 100%;
  height:80vh;
  overflow-y: scroll;
  position: absolute;
  left: 0;
  bottom: 0;
}
#device_name{
  color: #fff;
  font-size: 10vw;
  font-weight: bold;
  padding-top: 2vh;
  margin-left: 2vw;
}
.items{
  width: 100%;
  height: 13vh;
  border-bottom: 1px solid #44b5d8;
  overflow: hidden;
  margin-top: 1vh;
  position: relative;
}
.sensor_icon{
  position:absolute;
  right:13%;
  top:-2vh;
  width:15vh;
  height:15vh;
  opacity:.2;
  background-size:100% 100%;
}
.sensor_detail{
  float: right;
  height: 7vh;
  width: 7vh;
  background-size: 100% 100%;
  margin: 1vh;
}
.sensor_port,.sensor_name{
  float: left;
  color: #44b5d8;
  margin: 3vw
}
.sensor_port{
  font-size: 13vh;
  width: 15vw;
  text-align: center;
  line-height: 10vh; 
}
.sensor_name{
  font-size: 4vh;
}