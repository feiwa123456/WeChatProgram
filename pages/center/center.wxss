.center_top{
  width: 100%;
  height: 45vw;
  background: #44b5d8;
  background: -moz-linear-gradient(top,  #44b5d8 0%, #44b5d8 100%, #44b5d8 100%);
  background: -webkit-linear-gradient(top,  #44b5d8 0%,#44b5d8 100%,#44b5d8 100%);
  background: linear-gradient(to bottom,  #44b5d8 0%,#44b5d8 100%,#44b5d8 100%);
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#b4e391', endColorstr='#62e200',GradientType=0 );
  -moz-box-shadow:0px 2px 5px #333333; -webkit-box-shadow:0px 2px 5px #333333; box-shadow:0px 2px 5px #333333;
  text-align: center
}
.center_avatar{
  width: 20vw;
  height: 20vw;
  border-radius: 50%;
  border: 2px solid #fff;
  margin-top: 5vw;
}
.center_nickname{
  color: #fff;
  font-weight: bold;
  font-size: 4vw;
}
.items_box{
  text-align: center;
  width: 25%;
  font-weight: bold;
}
.center_device_info{
  width: 80%;
  margin: 4vw 7.5%;
  background-color: #fff;
  color: #2aa515;
  -moz-box-shadow:0px 2px 5px #333333; -webkit-box-shadow:0px 2px 5px #333333; box-shadow:0px 2px 5px #333333;
  border-radius: 5px;
  padding: 3vw;
  font-size: 3.5vw;
}
.center_list{
  width: 90vw;
  padding: 0 5vw;
  margin-top: 10vw;
}
.center_list_item{
  width: 100%;
  height: 30px;
  border-bottom: 1px solid #efefef;
  line-height: 30px;
  padding: 2vw 0;
}
.list_item_icon{
  width: 25px;
  height: 25px;
  float: left;
  margin-top: 5px;
}
.list_item_more{
  width: 25px;
  height: 25px;
  float: right;
  margin-top: 5px;
}
.list_item_message{
  width: 25px;
  height: 25px;
  float: right;
  margin-right: 20px;
}
.list_item_name{
  font-size: 4vw;
  float: left;
  margin-left: 3vw;
  color: #707070;
}