.view-top{
  width: 100%;
  height: 50px;
}
.search{
  width: 100%;
  border: 1px solid #000;
  border-radius: 50px;
}
.message-icon{ 
  float: left;
  background-size: 100% 100%;
}
swiper{
  width: 100%;
  height: 30vw;
  margin-bottom: 2vw;
}
.slide-image{
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
}
.flex-item{
  text-align: center;
  width: 25%;
  font-size: 3.2vw;
  font-weight: bold;
}
.item_image{
  width: 10vw;
  height: 10vw;
  background-size: 100% 100%;
  border: 1px solid #44b6d8;
  border-radius: 50%;
  padding: 3.5vw;
  margin: 1vw 4vw;
}
.news{
  width: 90vw;
  padding: 3vw 5vw;
}
.news_title{
  font-weight: bold;
  font-size: 4vw;
  height: 30px;
  line-height: 30px;
}
.news_more{
  font-size: 3.5vw;
  color: #707070;
  float: right;
  height: 30px;
  line-height: 30px;
}
.bottom-line{
  text-align: center;
  font-size: 3vw;
  color: #707070;
  margin: 3vw 1vh;
  border-top: 1px solid #efefef;
}